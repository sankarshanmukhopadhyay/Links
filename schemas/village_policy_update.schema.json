    "village_id",
    "created_at",
    "policy",
    "policy_hash"
  ],
  "properties": {
    "village_id": {
      "type": "string"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "actor": {
      "type": "string"
    },
    "policy": {
      "type": "object"
    },
    "policy_hash": {
      "type": "string"
    },
    "signature_alg": {
      "type": "string"
    },
    "public_key": {
      "type": "string"
    },
    "signature": {
      "type": "string"
    },
    "signatures": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "public_key",
          "signature"
        ],
        "properties": {
          "public_key": {
            "type": "string"
          },
          "signature": {
            "type": "string"
          }
        }
      }
    }
  }
}