{
  "$id": "https://links.local/schema/village.json",
  "type": "object",
  "required": [
    "village_id",
    "name",
    "created_at",
    "governance",
    "policy"
  ],
  "properties": {
    "village_id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "governance": {
      "type": "object",
      "required": [
        "admins",
        "decision_model"
      ],
      "properties": {
        "admins": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "decision_model": {
          "type": "string"
        }
      }
    },
    "policy": {
      "type": "object",
      "required": [
        "visibility",
        "allowed_predicates",
        "max_window_days",
        "min_signature_alg"
      ],
      "properties": {
        "visibility": {
          "enum": [
            "private",
            "village",
            "public"
          ]
        },
        "allowed_predicates": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "max_window_days": {
          "type": "integer"
        },
        "min_signature_alg": {
          "type": "string"
        },
        "allow_unverified": {
          "type": "boolean"
        },
        "retention_days": {
          "type": "integer"
        },
        "rate_limit_per_min": {
          "type": "integer"
        },
        "issuer_allowlist": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Allowed issuer key hashes (sha256 of public key). Empty => allow all except blocklist."
        },
        "issuer_blocklist": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Blocked issuer key hashes."
        },
        "require_issuer_allowlist": {
          "type": "boolean",
          "description": "If true, allowlist must be non-empty and issuer must be present."
        },
        "capabilities": {
          "type": "object",
          "description": "Role-based permissions",
          "properties": {
            "observer": {
              "type": "object",
              "properties": {
                "can_pull": {
                  "type": "boolean"
                },
                "can_push": {
                  "type": "boolean"
                }
              }
            },
            "member": {
              "type": "object",
              "properties": {
                "can_pull": {
                  "type": "boolean"
                },
                "can_push": {
                  "type": "boolean"
                }
              }
            },
            "admin": {
              "type": "object",
              "properties": {
                "can_pull": {
                  "type": "boolean"
                },
                "can_push": {
                  "type": "boolean"
                },
                "can_manage": {
                  "type": "boolean"
                }
              }
            }
          }
        },
        "issuer_id_allowlist": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Allowed issuer IDs (bundle.issuer)."
        },
        "issuer_id_blocklist": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Blocked issuer IDs (bundle.issuer)."
        },
        "require_policy_signature": {
          "type": "boolean",
          "description": "If true, policy updates must include a valid signature."
        },
        "policy_signer_allowlist": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Allowed policy signer key hashes (sha256 of policy public key). Empty => allow any signer when require_policy_signature=false."
        }
      }
    }
  }
}